<!DOCTYPE html>
<html>
<head>
  <title>DomAccount</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application", "postmessage" %>
  <%= csrf_meta_tags %>
  <style type='text/css'>
     body{
        margin : 0px;
        padding : 0px;
     }

     .head{
        padding: 10px 0px 10px 0px;
        width:100%;
        background-color: #DDD;
     }

     .login, .logout, .ajax_logout, .ajax_request{
        margin-left: 20px;
     }


  </style>
</head>

<body>
<div class='head'>
  <span class='login'>    
    <% if current_user.nil? %>
        <a href='/auth/wanliuid'>登陆</a>
    <% else %>
        <a class='user_login' href='javascript:void(0)'><%= current_user.login %></a>
        <a href="<%=users_logout_path %>" class='logout'>退出</a>
        <a href="javascript:void(0)" class='ajax_logout'>ajax清空session</a>
        <a href="javascript:void(0)" class='ajax_request'>ajax请求</a>
    <% end %>
  </span>
</div>
<%= yield %>
</body>
</html>

<script type="text/javascript">
  $(".ajax_logout").click(function(){
    $.get("<%= users_logout_path %>")
  })

  $(".ajax_request").click(function(){
    $.get("/")
  })
</script>
